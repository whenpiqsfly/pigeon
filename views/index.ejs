<!doctype html>
<html>
<head>
    <title>Pigeon App</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1><span class="fa fa-birthday-cake"></span> Happy Birthday Tracy!</h1>

        <% if (typeof user !== 'undefined') { %>
            <p>Welcome back!</p>
            <a href="/profile" class="btn btn-default"><span class="fa fa-user"></span> My Account</a>
            <a href="/logout" class="btn btn-default"><span class="fa fa-user"></span> Logout</a>
        <% } else { %>
            <p>Login or Register with:</p>
            <a href="/login" class="btn btn-default"><span class="fa fa-user"></span> Local Login</a>
            <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a>
            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
            <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>
        <% } %>
    </div>

</div>
</body>
</html>
